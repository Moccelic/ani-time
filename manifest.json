{
  "manifest_version": 3,
  "name": "Anime Time Tracker",
  "version": "0.1.0",
  "description": "Logs time spent watching anime on various streaming sites.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "windows"
    // "alarms" // Keep this commented OUT if not using yet, or remove
  ],

  "host_permissions": [
    "*://*.crunchyroll.com/*",
    "*://*.netflix.com/watch/*",
    "*://*.hidive.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icons/icon-16.png",
    "default_title": "View Anime Time Log",
    "default_popup": "popup.html"
  }
}
